<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/offset_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_generated_number"
            android:textSize="@dimen/text_size_20"/>

        <TextView
            android:id="@+id/tv_generated_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/offset_small"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_20"
            tools:text="56"/>

    </LinearLayout>

    <include layout="@layout/content_login"/>

    <android.support.design.widget.TextInputLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_input_layout_sum_of_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_sum_of_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sum_of_numbers_text"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <include layout="@layout/content_login_button"/>
</LinearLayout>